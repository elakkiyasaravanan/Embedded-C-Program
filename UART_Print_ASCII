#include <REGX51.H>
#include <stdio.h>

char putchar(char c) {
    SBUF = c;
    while (TI == 0);
    TI = 0;
    return c;
}

void main() {
    unsigned char c;

    // UART Initialization
    SCON = 0x50;  // Mode 1: 8-bit UART
    TMOD = 0x20;  // Timer1 in Mode2 (Auto-Reload)
    TH1 = 0xFD;   // Baud rate 9600 (11.0592MHz crystal)
    TR1 = 1;      // Start Timer1

    printf("ASCII Characters A-Z:\n");

    for (c = 'A'; c <= 'Z'; c++) {
        printf("%c ", c);
    }

    while (1);  // Infinite loop
}
